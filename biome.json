{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "include": ["./assets/src/js"]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "include": ["./assets/src/js"],
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
